<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Create a new Campground</h1>

    <div id="newCamp">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="title">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="url" placeholder="image url">
        </div>    
        <div class="form-group">
          <input class="form-control" type="text" name="description" placeholder="description">
        </div>    
        <div class="form-group">
          <button class="btn btn-primary btn-lg btn-block">Submit</button>
        </div>    
      </form>
      <h3>
        <a href="/campgrounds">Back to Campgrounds</a>
      </h3> 
    </div>

  </div>
</div>

<% include ../partials/footer %>